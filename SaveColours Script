using UnityEngine;
using UnityEngine.UI;
using TMPro;
using System.IO;
using System.Collections.Generic;

public class SaveColours : MonoBehaviour
{
    public Button saveColoursBtn;
    public TMP_Dropdown water;
    public TMP_Dropdown sand;
    public TMP_Dropdown grass;
    public TMP_Dropdown hill;
    public TMP_Dropdown mountain;

    void Start()
    {
        Button saveColoursFnc = saveColoursBtn.GetComponent<Button>();
        saveColoursFnc.onClick.AddListener(OnClick);
    }

    void OnClick()
    {
        List<string> colourIndex = GetColours.giveColour(0);

        string[] userColours = { water.value.ToString(), sand.value.ToString(), grass.value.ToString(),
            hill.value.ToString(), mountain.value.ToString() };
        File.WriteAllLines(@"C:\Users\Freddie\Desktop\textFiles\userColours.txt", userColours);
    }

}

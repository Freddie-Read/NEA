using System;
using System.Text;

namespace Id_Creator
{
    class Program
    {
        static void Main(string[] args)
        {
            //Would normally autopull email from Google
            string email = Console.ReadLine();
            int chunkLen = email.Length / 6;
            string[] chunks = new string[6];
            int x = 0;
            bool valid;

            //Checks if email is @gmail
            if (email.ToUpper().Contains("@GMAIL.COM"))
            {
                //Loops through the email and splits it into 6 equal 'chunks'
                for (int i = 0; i < 6; i++)
                {
                    do
                    {
                        chunks[i] += email[0];
                        email = email.Remove(0, 1);
                        x++;
                    } while (x != chunkLen);
                    x = 0;
                }

                int[] asciiVal = new int[chunks.Length];
                valid = true;

                //Gets the ascii decimal value of each of the chunks
                for (int i = 0; i < chunks.Length; i++)
                {
                    //Due to how .ToInt16 and .ToInt32 work, they require a certain amount of bits to work properly
                    //If the chunks are too short, they throw an error and if the chunks are longer than 4, they use 32
                    if (chunkLen < 2)
                    {
                        Console.WriteLine("Email is too short");
                        valid = false;
                        break;
                    }
                    else if (chunkLen < 4)
                    {
                        asciiVal[i] = BitConverter.ToInt16(Encoding.ASCII.GetBytes(chunks[i]), 0);
                    }
                    else
                    {
                        asciiVal[i] = BitConverter.ToInt32(Encoding.ASCII.GetBytes(chunks[i]), 0);
                    }
                }

                if (valid == true)
                {
                    //Creates a list of the chars used in the id
                    string idChars = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ";
                    string id = "";

                    foreach (var value in asciiVal)
                    {
                        //For every decimal generated by asciiVal, it's modded by 53 and given a value from idChars
                        id += idChars[value % idChars.Length + 1];
                    }

                    Console.WriteLine(id);
                }

            }

            else
            {
                Console.WriteLine("Invalid Email (gmail needed)");
            }

            Console.ReadLine();
        }

    }
}
